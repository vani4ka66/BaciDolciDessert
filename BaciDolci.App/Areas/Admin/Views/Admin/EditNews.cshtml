@model BaciDolci.Models.BindingModels.NewsBindingModel

@{
    ViewBag.Title = "EditNews";
}



<div class="container">
    <div class="jumbotron">
        <h2>Edit News</h2>
        <hr />

        @using (Html.BeginForm("EditNews", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(m => m.Id)

            <div class="row">
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control", type="text",required = "true", PlaceHolder = @Model.Name } })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                    <br />
                </div>
            </div>



            <div class="row">
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.EditorFor(m => m.Image, new { htmlAttributes = new { @class = "form-control", type = "text", required = "false", PlaceHolder = @Model.Image } })
                        @Html.ValidationMessageFor(m => m.Image, "", new { @class = "text-danger" })
                    </div>
                    <br />
                </div>
            </div>

            <div class="row">
                <div class="form-group">
                    <div class="col-sm-10">
                        @Html.TextAreaFor(m => m.Content, new { @class = "form-control", minlength = 20, required = "true", PlaceHolder = @Model.Content })
                        @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                    </div>
                    <br />
                </div>
            </div>

            <div class="btn-group btn btn-succes" role="group" aria-label="...">
                <input type="submit" id="btn-add-category" class="btn btn-success btn-lg" value="Save" />
            </div>
        }
    </div>
</div>

